@model MealAccounce.Models.Employee
@{
    ViewBag.Title = "Employee Add";
}


<div class="row justify-content-center mt-4">
    <div class="card col-11">
        <div class="card-body">
            <h1 class="text-center mb-5" style="color:cadetblue">Agent Commission Create Form</h1>
            <p class="text-muted"></p>
            <div>
                @using (Html.BeginForm("AddOrEdit", "Employee", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, true, new { @class = "form-horizontal", role = "form" }))
                {
                    <div class="form-group row mb-3" style="display: flex; justify-content: center">
                        <label class="col-sm-3 col-lg-2 col-md-3  col-form-label">EmployeeId</label>
                        <div class="col-sm-3 col-lg-3 col-md-3">
                            @Html.TextBoxFor(m => m.EmployeeId, new { @class = "form-control", name = "code", type = "text", @required = "req" })
                        </div>
                    </div>

                    <div class="form-group row mb-3" style="display: flex; justify-content: center">
                        <label class="col-sm-3 col-lg-2 col-md-3  col-form-label">Employee Name</label>
                        <div class="col-sm-3 col-lg-3 col-md-3">
                            @Html.TextBoxFor(m => m.EmployeeName, new { @class = "form-control", name = "code", type = "text", @required = "req" })
                        </div>
                    </div>

                    <div class="form-group row mb-3" style="display: flex; justify-content: center">
                        <label class="col-sm-3 col-lg-2 col-md-3  col-form-label">Designation</label>
                        <div class="col-sm-3 col-lg-3 col-md-3">
                            @Html.TextBoxFor(m => m.Designation, new { @class = "form-control", name = "code", type = "text", @required = "req" })
                        </div>
                    </div>

                    <div class="row" style="justify-content: center">
                        <div>
                            <button type="submit" class="btn btn-primary m-1">Submit</button>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
</div>